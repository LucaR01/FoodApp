<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.AboutActivity">

    <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"> -->

<!-- App Logo or Icon -->
    <ImageView
        android:id="@+id/appLogoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/welcome_activity_salad" />

<!-- App Name and Version -->
    <TextView
        android:id="@+id/appNameVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appLogoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Food App v1.0.0"
        android:textSize="16sp"
        android:textStyle="bold" />

<!-- App Description -->
    <TextView
        android:id="@+id/appDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appNameVersionTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Explore Culinary Adventures, Anytime, Anywhere with FoodApp: Your Gourmet Companion."
        android:textSize="14sp" />

<!-- Developer Information -->
    <TextView
        android:id="@+id/developerInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appDescriptionTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Developed by Luca R.\nWebsite: www.example.com\nEmail: contact@example.com"
        android:textSize="14sp"
        android:gravity="center" />

<!-- Privacy Policy Link -->
    <TextView
        android:id="@+id/aboutPrivacyPolicyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developerInfoTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/privacy_policy"
        android:textColor="?colorPrimary"
        android:textSize="14sp" />

<!-- Feedback Button -->
    <Button
        android:id="@+id/aboutFeedbackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutPrivacyPolicyTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/custom_green"
        android:text="@string/send_feedback"
        android:textSize="16sp" />

    <!--</ScrollView>-->

</RelativeLayout>
